{
  "name": "get-file-checksum",
  "displayName": "Get File Checksum",
  "description": "",
  "icon": "img/icon.png",
  "version": "0.0.2",
	"publisher": "pinshengjuan",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
	"repository": {
		"type": "git",
		"url": "https://github.com/pinshengjuan/get-file-checksum"
	},
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
			"title": "Get File Checksum",
			"properties": {
        "get-file-checksum.base": {
          "type": "string",
          "default": "Hexadecimal",
          "enum": ["Decimal", "Hexadecimal"]
        },
				"get-file-checksum.prefix": {
					"type": "boolean",
					"default": true,
					"description": "Set to add \"0x\" prefix, the option only take effects on Hexadecimal"
				}
			}
		},
    "menus": {
      "explorer/context": [
        {
          "submenu": "sub.menu"
        }
      ],
      "sub.menu": [
        {
          "command": "get-file-checksum.getFileChecksum8",
          "when": "!explorerResourceIsFolder",
          "group": "myGroup@1"
        },
        {
          "command": "get-file-checksum.getFileChecksum16",
          "when": "!explorerResourceIsFolder",
          "group": "myGroup@2"
        },
        {
          "command": "get-file-checksum.getFileChecksum32",
          "when": "!explorerResourceIsFolder",
          "group": "myGroup@3"
        }
      ]
    },
    "commands": [
      {
        "command": "get-file-checksum.getFileChecksum8",
        "when": "!explorerResourceIsFolder",
        "title": "Checksum 8"
      },
      {
        "command": "get-file-checksum.getFileChecksum16",
        "when": "!explorerResourceIsFolder",
        "title": "Checksum 16"
      },
      {
        "command": "get-file-checksum.getFileChecksum32",
        "when": "!explorerResourceIsFolder",
        "title": "Checksum 32"
      }
    ],
    "submenus": [
      {
        "id": "sub.menu",
        "label": "Get File Checksum"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {}
}
